#include<stdio.h>
#include<stdlib.h>
//Fatorial

int fatorial(int y){
int x=0, resultado;

while(y>=x){
	
resultado = y * x;
printf("\n\n %d . %d = %d", y, x, resultado);
x++;
}

return resultado;
}

int main(){
	int valor;
	printf("Digite o valor que deseja ser fatorado: ");
		scanf("%d", &valor);
		int resultado = fatorial(valor);
	
	printf("\n\n\n Valor da fatoracao: %d", resultado);	
}
